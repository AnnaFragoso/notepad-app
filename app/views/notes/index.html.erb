<h1><span class="badge bg-secondary">INDEX</span></h1>

<a href="/notes/new">Criar nova anotação</a>

<div class="card">
  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <td><%= note.note %></td>
        <td><%= link_to "Show", note %></td>
        <td><%= link_to "Edit", edit_note_path(note) %></td>
        <td><%= link_to "Destroy", note, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</div>